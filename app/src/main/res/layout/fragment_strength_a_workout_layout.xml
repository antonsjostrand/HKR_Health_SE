<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/squatStrTW"
            android:text="@string/squat"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youtube_example"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/squatStrTW"
            android:id="@+id/goToSquatStrButton"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/squatInfoTW"
            android:text="@string/repInfo1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:layout_constraintTop_toBottomOf="@id/squatStrTW"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/squatStrSetOneWeightET"
            android:textAlignment="center"
            android:hint="@string/weight"
            app:layout_constraintTop_toBottomOf="@id/squatInfoTW"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/squatStrSetOneRepsET"
            android:textAlignment="center"
            android:hint="@string/reps"
            app:layout_constraintTop_toBottomOf="@id/squatInfoTW"
            app:layout_constraintRight_toRightOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/squatStrSetTwoWeightET"
            android:textAlignment="center"
            android:hint="@string/weight"
            app:layout_constraintTop_toBottomOf="@id/squatStrSetOneWeightET"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/squatStrSetTwoRepsET"
            android:textAlignment="center"
            android:hint="@string/reps"
            app:layout_constraintTop_toBottomOf="@id/squatStrSetOneRepsET"
            app:layout_constraintRight_toRightOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/squatStrSetThreeWeightET"
            android:textAlignment="center"
            android:hint="@string/weight"
            app:layout_constraintTop_toBottomOf="@id/squatStrSetTwoWeightET"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/squatStrSetThreeRepsET"
            android:textAlignment="center"
            android:hint="@string/reps"
            app:layout_constraintTop_toBottomOf="@id/squatStrSetTwoRepsET"
            app:layout_constraintRight_toRightOf="parent"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/benchPressStrHeaderTW"
            android:text="@string/bench_press"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:layout_constraintTop_toBottomOf="@id/squatStrSetThreeWeightET"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youtube_example"
            app:layout_constraintTop_toTopOf="@id/benchPressStrHeaderTW"
            app:layout_constraintLeft_toLeftOf="@id/benchPressStrHeaderTW"
            android:id="@+id/goToBenchPressStrButton"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/benchPressStrInfoTW"
            android:text="@string/repInfo1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:layout_constraintTop_toBottomOf="@id/benchPressStrHeaderTW"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/benchPressStrSetOneWeightET"
            android:textAlignment="center"
            android:hint="@string/weight"
            app:layout_constraintTop_toBottomOf="@id/benchPressStrInfoTW"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/benchPressStrSetOneRepsET"
            android:textAlignment="center"
            android:hint="@string/reps"
            app:layout_constraintTop_toBottomOf="@id/benchPressStrInfoTW"
            app:layout_constraintRight_toRightOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/benchPressStrSetTwoWeightET"
            android:textAlignment="center"
            android:hint="@string/weight"
            app:layout_constraintTop_toBottomOf="@id/benchPressStrSetOneWeightET"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/benchPressStrSetTwoRepsET"
            android:textAlignment="center"
            android:hint="@string/reps"
            app:layout_constraintTop_toBottomOf="@id/benchPressStrSetOneRepsET"
            app:layout_constraintRight_toRightOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/benchPressStrSetThreeWeightET"
            android:textAlignment="center"
            android:hint="@string/weight"
            app:layout_constraintTop_toBottomOf="@id/benchPressStrSetTwoWeightET"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/benchPressStrSetThreeRepsET"
            android:textAlignment="center"
            android:hint="@string/reps"
            app:layout_constraintTop_toBottomOf="@id/benchPressStrSetTwoRepsET"
            app:layout_constraintRight_toRightOf="parent"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deadliftStrHeaderTW"
            android:text="@string/deadlift"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:layout_constraintTop_toBottomOf="@id/benchPressStrSetThreeWeightET"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youtube_example"
            app:layout_constraintTop_toTopOf="@id/deadliftStrHeaderTW"
            app:layout_constraintLeft_toLeftOf="@id/deadliftStrHeaderTW"
            android:id="@+id/goTodeadliftStrButton"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deadliftStrInfoTW"
            android:text="@string/repInfo2"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:layout_constraintTop_toBottomOf="@id/deadliftStrHeaderTW"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/deadliftStrSetOneWeightET"
            android:textAlignment="center"
            android:hint="@string/weight"
            app:layout_constraintTop_toBottomOf="@id/deadliftStrInfoTW"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/deadliftStrSetOneRepsET"
            android:textAlignment="center"
            android:hint="@string/reps"
            app:layout_constraintTop_toBottomOf="@id/deadliftStrInfoTW"
            app:layout_constraintRight_toRightOf="parent"
            />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentET"
            android:hint="@string/comment"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/deadliftStrSetOneRepsET"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ratingET"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/ratingET"
            android:hint="@string/rating"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/green"
            app:layout_constraintTop_toBottomOf="@id/commentET"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/saveWorkoutButton"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveWorkoutButton"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/ratingET"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
</ScrollView>