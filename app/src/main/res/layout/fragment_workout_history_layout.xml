<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/hypertrophyHistoryButton"
        android:text="@string/hypertrophy"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/strengthHistoryButton"
        android:text="@string/strength"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/hypertrophyHistoryButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/leanHistoryButton"
        android:text="@string/hypertrophy"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/strengthHistoryButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

</android.support.constraint.ConstraintLayout>