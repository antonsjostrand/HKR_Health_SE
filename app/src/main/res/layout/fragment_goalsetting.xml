<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goalSettingTV"
            android:text="Weight Goal"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />


        <EditText
            android:id="@+id/weigtGoalET"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/weightGoal"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/goalSettingTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/currentGoalWeightTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:layout_marginRight="52dp"
            android:hint="@string/yourCurrentGoal"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weigtGoalET" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentGoalShownTV"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/currentGoalWeightTV"
            app:layout_constraintRight_toRightOf="@id/currentGoalWeightTV"
            app:layout_constraintTop_toBottomOf="@id/currentGoalWeightTV"
            />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveGoalWeightButton"
            android:textAlignment="center"
            android:text="Save"
            android:textSize="20sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/weigtGoalET"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentWeightTV"
            android:text="Current Weight"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:layout_constraintTop_toBottomOf="@id/saveGoalWeightButton"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/currentWeightET"
            android:textAlignment="center"
            android:hint="@string/currentWeight"
            app:layout_constraintTop_toBottomOf="@id/currentWeightTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveCurrentWeightButton"
            android:textAlignment="center"
            android:text="Save"
            android:textSize="20sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/currentWeightET"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
</ScrollView>