<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hkrhealth.MainActivity" >

    <TextView
        android:id="@+id/timerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goToYoutubeButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:textSize="50sp"
        tools:text="00:00" />

    <Button
        android:id="@+id/startCountDownButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timerTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="119dp"
        android:layout_marginRight="119dp"
        android:text="Start" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetButton"
        android:text="Reset"
        android:layout_toLeftOf="@id/startCountDownButton"
        android:layout_below="@+id/timerTV"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/goToYoutubeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instructionsTV"
            android:text="@string/row1"
            android:lines="17"


            />
    </ScrollView>

</RelativeLayout>